<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1E8F7"
    tools:context="beacondetector.emulk.it.beacondetector.MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#C1E8F7"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fitsSystemWindows="true"
        >

        <TextView
            android:id="@+id/AppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="No Beacon Here"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:elevation="4dp"
           />

        <TextView
            android:id="@+id/beaconLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/AppName"
            android:layout_marginTop="10dp"
            android:text="Beacon Name:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/nameBeacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/namespaceID"
            android:layout_alignRight="@+id/namespaceID"
            android:layout_alignTop="@+id/beaconLayout"
            android:text="NameBeacon"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/namespaceID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/namespaceLayout"
            android:layout_alignEnd="@+id/telemetryData"
            android:layout_alignRight="@+id/telemetryData"
            android:text="Namespace"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/namespaceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/beaconLayout"
            android:layout_marginTop="10dp"
            android:text="Namespace:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/instanceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namespaceLayout"
            android:layout_marginTop="10dp"
            android:text="Instance:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/instanceID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/beaconDistance"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/instanceLayout"
            android:text="Instance"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dp"/>


        <TextView
            android:id="@+id/distanceLayout"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/beaconDistance"
            android:layout_gravity="top"
            android:text="Distance:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/beaconDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/telemetryData"
            android:layout_alignRight="@+id/telemetryData"
            android:layout_below="@+id/instanceLayout"
            android:layout_marginTop="10dp"
            android:text="Distance:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/rssiLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distanceLayout"
            android:text="RSSi:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/rssiView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/beaconDistance"
            android:layout_alignRight="@+id/beaconDistance"
            android:layout_alignTop="@+id/rssiLayout"
            android:layout_below="@+id/beaconDistance"
            android:layout_gravity="right"
            android:text="RSSi"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dp"/>


        <TextView
            android:id="@+id/txPowerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rssiLayout"
            android:layout_gravity="left|top"
            android:layout_marginTop="10dp"
            android:text="TxPower:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/TxPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/rssiView"
            android:layout_alignRight="@+id/rssiView"
            android:layout_alignTop="@+id/txPowerLayout"
            android:layout_below="@+id/rssiView"
            android:text="TxPower"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/telemetryLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txPowerLayout"
            android:layout_marginTop="10dp"
            android:text="Telemetry Data:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/telemetryData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/telemetryLayout"
            android:text="TelemetryData"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Last alive on"
            android:id="@+id/aliveLayout"
            android:layout_below="@+id/telemetryLayout"
            android:layout_alignLeft="@+id/instanceLayout"
            android:layout_alignStart="@+id/instanceLayout"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="alive"
            android:id="@+id/aliveId"
            android:layout_alignTop="@+id/aliveLayout"
            android:layout_alignRight="@+id/TxPower"
            android:layout_alignEnd="@+id/TxPower"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/urlLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/aliveLayout"
            android:layout_marginTop="10dp"
            android:text="Url:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/urlId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/urlLayout"
            android:layout_gravity="right|top"
            android:clickable="true"
            android:onClick="onClick"
            android:text="EddystonUrl"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dp"/>


    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>

</FrameLayout>
